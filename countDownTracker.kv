#:kivy 1.11.1

<GriddedScreen>:
    size_hint_min_y: 200
    GridLayout:
        cols:2
        size: root.width, root.height

        GridLayout:
            id: buttonsGroup
            orientation: 'vertical'
            rows:4
            size_hint_x: None
            width: 250
            
            Button:
                id: startEndButton
                text: 'START'
                font_size: '50'
                on_release: root.startEndPace()
            Button:
                id: ftrButton
                text: "FTR idle"
                font_size: '50'
                on_release: root.FTRnow()
            Label:
                size_hint_y: None
                height: 20
                font_size: '15'
                text: 'Input case number below (required)'
            TextInput:
                id: optionalCaseNum
                size_hint_y: None
                multiline: False
                height: 35
                font_size: '15'
                text: '########'
        
        
        GridLayout:
            orientation: 'vertical'
            rows:3
            # size_hint_x: None
            # width: root.width - buttonsGroup.width
            Label:
                id: timeText
                font_size: '50'
                size_hint_y: None
                height: 80
                text: root.time2string(root.initialClockCounter)
            Label:
                id: middleStatsText
                size_hint_y: None
                height: 40
                text: f'Set Pace: {root.time2string(root.initialClockCounter)}  |  Average Pace: 00:00  |  Banked Time: 00:00'
            Label:
                id: statsText
                text: 'Press START to begin pace with 10 min intervals'